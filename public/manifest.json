{
  "manifest_version": 3,
  "name": "Artifacts for ChatGPT",
  "description": "Bring Artifacts Ability to ChatGPT.",
  "version": "1.0",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"]
    }
  ],
  "background": {
    "type": "module",
    "service_worker": "service_worker.js"
  },
  "permissions": ["sidePanel", "storage"],
  "host_permissions": ["<all_urls>"]
}
